! Configuration File for keepalived

global_defs {
    router_id ka_lvs_2
}
vrrp_instance VI {
    state BACKUP
    interface eth0
    virtual_router_id 51
    priority 90
    nopreempt
    advert_int 1
    authentication {
        auth_type PASS
        auth_pass 1234
    }

    virtual_ipaddress {
        ## user side
        10.48.80.29 dev eth0
        ## inner side
        192.168.100.129 dev eth1
    }
}
## follow user side
virtual_server 10.48.80.29 80 {
    delay_loop 3
    lvs_sched rr
    lvs_method DR
    protocol TCP

    ## business server #1
    real_server 192.168.100.151 80 {
        weight 1
        HTTP_GET {
            url {
                path /
                status_code 200
            }
            connect_timeout 3
        }
    }
    ## business server #2
    real_server 192.168.100.152 80 {
        weight 1
        HTTP_GET {
            url {
                path /
                status_code 200
            }
            connect_timeout 3
        }
    }
}
